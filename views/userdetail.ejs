<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheet/userdetail.css" />

</head>
<body>
   

<div class="container">
    <h1>Overview</h1>
	<div class="upload">
		<div class="card">
            <div class="card-image-container">
                <td><img src="/images/uploads/<%= user.profilepic %>" alt="" height="300px" width="300px"></td>
              
            </div>
            <div class="card-container">
                <h2 class="card-title">Detail</h2>
                <p class="card-des"><span >Name:  </span><%= user.username %></p>
                <p class="card-des"><span >Email Id:  </span><%= user.email %></p>
                <p class="card-des"><span >Created At:  </span><%= new Date(user.createdAt).toLocaleString('en-US', { 
                    year: 'numeric', 
                    month: 'long', 
                    day: 'numeric', 
                    hour: '2-digit', 
                    minute: '2-digit' 
                }) %></p>
                <p class="card-des"><span >Update At:  </span>
                    <%= new Date(user.updatedAt).toLocaleString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric', 
                        hour: '2-digit', 
                        minute: '2-digit' 
                    }) %></p>
            </div>
        </div>
        <table class="styled-table">
            <thead>
              <tr>
                <th></th>
                <th>File Name</th>
                <th>Date</th>
                
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% data.map(e => { %>
                <tr class="active-row">
                    <td></td>
                    <td><%= e.name %>.txt</td>
                    <td><%= new Date(e.createdAt).toLocaleString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric', 
                        hour: '2-digit', 
                        minute: '2-digit' 
                    }) %></td>
                    <td></td>

                  </tr>
            <% }) %>
            
            </tbody>
          </table>
	</div>
</div>
    
</body>
</html>